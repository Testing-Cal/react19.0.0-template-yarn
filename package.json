{
  "homepage": "CONTEXT/.",
  "name": "react19.0.0-template-yarn",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/react": "^19.0.7",
    "@types/react-dom": "^19.0.3",
    "highcharts": "^12.1.2",
    "highcharts-react-official": "^3.2.1",
    "jest-environment-jsdom": "^29.7.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.1.3",
    "react-scripts": "^5.0.1",
    "typescript": "^4.9.5"
  },
  "scripts": {
    "start": "HOST=0.0.0.0 PORT=${port} react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test src/test/ -u  --env=jsdom --testResultsProcessor ./node_modules/jest-sonar-reporter/index.js --coverage -u",
    "test:coverage": "jest --coverage --config=jest.config.json",
    "eject": "react-scripts eject",
    "sonar": "sonar-scanner"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.23.3",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "jest": "^29.7.0",
    "jest-sonar-reporter": "^2.0.0",
    "sonarqube-scanner": "^4.2.6",
    "ts-jest": "29.1.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!coverage/**",
      "!node_modules/**",
      "!src/index.js",
      "!public/**",
      "!build/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    },
    "coverageReporters": [
      "text",
      "lcov",
      "json",
      "text",
      "clover",
      "cobertura"
    ]
  },
  "jestSonar": {
    "reportPath": ".",
    "reportFile": "sonar-report.xml",
    "indent": 4
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
